@model IEnumerable<BankTransactions.Models.Transaction>

@{
    ViewData["Title"] = "Index";
}

<h1>Passbook</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AccountNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BenificiaryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th> 
                <a asp-action="AddorEdit" class="btn btn-sm btn-success"><i class="bi-solid bi-plus"></i>Add New</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccountNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BenificiaryName)
            </td>    
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>       
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                <div class="d-flex justify-content-start">
                    <a asp-action="AddorEdit" asp-route-id="@item.TransactionId" class="btn btn-warning me-2">
                        <i class="bi bi-solid bi-pencil-square" ></i>
                    </a> 
                    <form asp-action="Delete" asp-route-id="@item.TransactionId" >
                        <button type ="submit" class ="btn btn-danger" 
                        onclick="return confirm ('Are you sure to delete this record?')">
                        <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </div>               
            </td>
        </tr>
}
    </tbody>
</table>
